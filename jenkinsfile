pipeline{
    agent any

    environment{
        REPO_URL = 'https://github.com/GolanMutzafi/pipelineproj'
        BRANCH = 'main'
    }

    stages{

        stage('checkout code'){
            steps{
                git branch: "${BRANCH}", url: "${REPO_URL}"
            }
        }
                stage('Install Dependencies') {
            steps {
                script {
                    sh 'pip install -r requirements.txt'
                }
            }
        }
                stage('Deploy') {
            steps {
                script {
                    sh 'docker build -t hw.py .'
                    sh 'docker run -p 8080:8080 hw.py'
                }
            }
        }
    }
}
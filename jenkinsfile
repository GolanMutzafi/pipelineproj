pipeline {
    agent any  
    environment {
        DOCKER_REGISTRY = 'docker.io' 
        IMAGE_NAME = 'golanm/hw' 
        DOCKER_CREDENTIALS = 'docker-credentials'
    }

    stages {
        stage('Debug Git Status') {
            steps {
                script {
                    sh 'git status'
                }
            }
        }

        stage('Checkout Git Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/GolanMutzafi/pipelineproj.git' 
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh '''
                    docker info || exit 1
                    docker build -t $IMAGE_NAME:latest .
                    '''
                }
            }
        }

        stage('Login to Docker Registry') {
            steps {
                script {
                    withCredentials([string(credentialsId: DOCKER_CREDENTIALS, variable: 'DOCKER_TOKEN')]) {
                        sh 'echo $DOCKER_TOKEN | docker login -u $DOCKER_USERNAME --password-stdin $DOCKER_REGISTRY'
                    }
                }
            }
        }

        stage('Push Docker Image to Registry') {
            steps {
                script {
                    sh 'docker push $IMAGE_NAME:latest'
                }
            }
        }

        stage('SSH to Linux Machine') {
            steps {
                sshagent(['ssh-credentials']) {
                    sh 'ssh -o StrictHostKeyChecking=no vboxuser@10.0.2.15 "docker pull $IMAGE_NAME:latest"'
                }
            }
        }

        stage('Run Docker Container on Linux Machine') {
            steps {
                script {
                    sh 'ssh -o StrictHostKeyChecking=no vboxuser@10.0.2.15 "docker run -d -p 5000:5000 $IMAGE_NAME:latest"'
                }
            }
        }

        stage('Test Application on Linux Machine') {
            steps {
                script {
                    sh 'ssh -o StrictHostKeyChecking=no vboxuser@10.0.2.15 "curl http://localhost:5000"'
                }
            }
        }
    }
}